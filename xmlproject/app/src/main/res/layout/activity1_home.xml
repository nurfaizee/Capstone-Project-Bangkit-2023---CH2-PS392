<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hello, User"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_carousel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:contentDescription="Carousel"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />
<!--1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_carousel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card2"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Analisis Resiko Stunting"
                android:textSize="10sp"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--2-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/ahliGiziButton"
        app:layout_constraintStart_toEndOf="@+id/cv_1"
        app:layout_constraintTop_toTopOf="@+id/cv_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Deteksi Gizi Makanan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--3-->
    <androidx.cardview.widget.CardView
        android:id="@+id/ahliGiziButton"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card3"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cari Ahli Gizi"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--4-->
    <androidx.cardview.widget.CardView
        android:id="@+id/bmiButton"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Hitung BMI"
                android:textSize="10sp" 
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--5-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_5"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/cv_6"
        app:layout_constraintStart_toEndOf="@+id/bmiButton"
        app:layout_constraintTop_toTopOf="@+id/bmiButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cari Rumah Sakit"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!--6-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_6"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_gravity="fill"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bmiButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="card6"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tentang Apps"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seputar Gizi"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmiButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        tools:listitem="@layout/item_artikel" />

</androidx.constraintlayout.widget.ConstraintLayout>